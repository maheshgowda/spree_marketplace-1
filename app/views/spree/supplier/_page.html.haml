.supplier-canopy
  .supplier-header
    = image_tag supplier.background
    .supplier-info
      .supplier-avatar
        = image_tag supplier.avatar
      .supplier-property.supplier-name
        = supplier.name
      - if supplier.slogan.present?
        .supplier-property.supplier-slogan
          = supplier.slogan
      - if supplier.url.present?
        .supplier-property.supplier-url
          = link_to supplier.url, supplier.url
      - if supplier.email.present?
        .supplier-property.supplier-email
          = link_to supplier.email, "mailto: #{supplier.email}"
  .supplier-nav
    %ul.nav.nav-pills
      %li{class:('active' if selected_tab == :about)}
        = link_to Spree.t(:about), supplier_path(supplier.slug)
      %li{class:('active' if selected_tab == :products)}
        = link_to Spree.t(:products), supplier_products_path(supplier.slug)
.supplier-content
  = yield
